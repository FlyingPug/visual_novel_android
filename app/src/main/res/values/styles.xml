<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/cyan</item>
        <item name="android:backgroundTint">@color/cyan</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quattrocento_sans</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="darkButtonStyle" parent="ButtonStyle">
        <item name="android:background">@color/darker_cyan</item>
        <item name="android:backgroundTint">@color/darker_cyan</item>
    </style>
    <style name="backGroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">false</item>
    </style>
    <style name="smallText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/darker_cyan</item>
        <item name="android:backgroundTint">@color/darker_cyan</item>
        <item name="android:fontFamily">@font/quattrocento_sans</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="bigText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cyan</item>
        <item name="android:fontFamily">@font/quattrocento_sans</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>
</resources>